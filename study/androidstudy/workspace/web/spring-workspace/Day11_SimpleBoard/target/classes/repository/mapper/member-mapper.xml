<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="repository.mapper.MemberMapper">
    <insert id="insert" parameterType="MemberVO">
        INSERT INTO MEMBER(ID,PASSWORD,EMAIL,PHONE)
        VALUES(#{id},#{password},#{email},#{phone})
    </insert>
     
    <select id="selectMember" parameterType="String"
                                resultType="MemberVO">
        SELECT <include refid="memSql"/> FROM MEMBER
        WHERE ID=#{id}
    </select>
     
    <select id="selectMemberNum" resultType="int">
        SELECT COUNT(ID) FROM MEMBER 
        WHERE ID=#{id} and PASSWORD=#{password}
    </select>
     
    <sql id="memSql">
        MEMBER_NUM AS "memberNum", ID, 
        PASSWORD, PHONE, EMAIL
    </sql>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="repository.mapper.BoardMapper">
    <insert id="insert" parameterType="BoardVO">
    INSERT INTO BOARD
        (TITLE,WRITER,CONTENT,READ_COUNT,WRITE_DATE)
    VALUES
        (#{title}, #{writer}, #{content}, #{readCount}
            #{writeDate})
    </insert>
     
    <select id="selectTotalCount" resultType="int">
    SELECT COUNT(*) FROM BOARD
    </select>
     
    <select id="select" parameterType="int"
                            resultMap="boardResultMap">
        SELECT * FROM BOARD 
            WHERE BOARD_NUM=#{boardNum}
    </select>
     
    <select id="selectList" resultMap="boardResultMap">
        SELECT 
            BOARD_NUM, TITLE, WRITER, WRITE_DATE,
            READ_COUNT
        FROM 
            BOARD
        ORDER BY 
            BOARD_NUM DESC
        LIMIT 
            #{startRow},#{count}        
    </select>
     
    <update id="update" parameterType="BoardVO">
    UPDATE BOARD 
    SET 
        TITLE=#{title}, CONTENT=#{content},
        WRITE_DATE=#{writeDate}
    WHERE
        BOARD_NUM=#{boardNum}    
    </update>
     
    <update id="updateReadCount" parameterType="int">
    UPDATE BOARD
    SET 
        READ_COUNT=READ_COUNT+1
    WHERE
        BOARD_NUM=#{boardNum}
    </update>
     
    <delete id="delete" parameterType="int">
    DELETE FROM BOARD
    WHERE BOARD_NUM=#{boardNum}
    </delete>
     
    <resultMap type="BoardVO" id="boardResultMap">
        <result property="title" column="TITLE"/>
        <result property="boardNum" column="BOARD_NUM"/>
        <result property="writer" column="WRITER"/>
        <result property="writeDate" column="WRITE_DATE"/>
        <result property="readCount" column="READ_COUNT"/>
        <result property="content" column="CONTENT"/>
    </resultMap>
</mapper>